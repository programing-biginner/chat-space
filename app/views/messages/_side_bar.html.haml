.side-bar
  .side-header
    .side-header__box
      %h3.side-header__user-name
        = current_user.name
      .side-header__icon
        = link_to new_group_path do
          = icon('fas', 'pen-square', class: 'icon')
          %span<>
        = link_to edit_user_path(current_user) do
          = icon('fas', 'cog', class: 'icon')


  .side-bar__groups-list
    - current_user.groups.each do |group|
      .group
        = link_to '#' do
          .group__name
            = group.name
          .group__message
